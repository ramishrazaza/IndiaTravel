<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - India Travel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .sidebar { background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%); }
        .stat-card { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
        .stat-card-2 { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
        .stat-card-3 { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
        .stat-card-4 { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
    </style>
</head>
<body class="bg-slate-900 text-gray-100 dark">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="sidebar w-64 shadow-lg hidden md:block">
            <div class="p-6 border-b border-slate-700">
                <h1 class="text-2xl font-bold text-white">
                    <i class="fas fa-leaf text-green-400 mr-2"></i>IndiaTravel
                </h1>
                <p class="text-sm text-gray-400 mt-1">Admin Panel</p>
            </div>

            <nav class="p-4 space-y-2">
                <a href="/admin/dashboard" class="flex items-center px-4 py-3 rounded-lg bg-slate-700/50 text-white font-semibold">
                    <i class="fas fa-chart-line w-5 mr-3 text-blue-400"></i>Dashboard
                </a>
                <a href="/admin/destinations" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-map-marker-alt w-5 mr-3 text-red-400"></i>Destinations
                </a>
                <a href="/admin/experiences" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-star w-5 mr-3 text-yellow-400"></i>Experiences
                </a>
                <a href="/admin/packages" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-box w-5 mr-3 text-purple-400"></i>Packages
                </a>
                <a href="/admin/blogs" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-file-alt w-5 mr-3 text-cyan-400"></i>Blogs
                </a>
                <a href="/admin/testimonials" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-comments w-5 mr-3 text-pink-400"></i>Testimonials
                </a>
                <a href="/admin/bookings" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-calendar w-5 mr-3 text-green-400"></i>Bookings
                </a>
                <a href="/admin/aiplans" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-robot w-5 mr-3 text-orange-400"></i>AI Plans
                </a>
            </nav>

            <div class="absolute bottom-0 left-0 right-0 w-64 p-4 border-t border-slate-700">
                <a href="/admin/logout" class="flex items-center px-4 py-2 rounded-lg hover:bg-red-600/20 transition text-red-400">
                    <i class="fas fa-sign-out-alt w-5 mr-3"></i>Logout
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto">
            <!-- Top Bar -->
            <div class="bg-slate-800 border-b border-slate-700 p-4 md:p-6 flex justify-between items-center">
                <h2 class="text-3xl font-bold">
                    <i class="fas fa-tachometer-alt text-blue-400 mr-3"></i>Dashboard
                </h2>
                <a href="/admin/logout" class="text-red-400 hover:text-red-300 transition">
                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                </a>
            </div>

            <!-- Success Message -->
            <% if (message) { %>
                <div class="bg-green-500/20 border border-green-500/50 text-green-200 mx-4 md:mx-6 mt-6 px-4 py-3 rounded-lg flex items-center">
                    <i class="fas fa-check-circle mr-3"></i>
                    <%= message %>
                </div>
            <% } %>

            <!-- Content -->
            <div class="p-4 md:p-6 space-y-6">
                <!-- Stats Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <!-- Destinations Stat -->
                    <div class="stat-card rounded-2xl p-6 text-white shadow-lg">
                        <div class="flex justify-between items-start">
                            <div>
                                <p class="text-white/80 text-sm font-semibold mb-1">Destinations</p>
                                <p class="text-4xl font-bold"><%= stats.destinations %></p>
                            </div>
                            <i class="fas fa-map-marker-alt text-4xl opacity-20"></i>
                        </div>
                        <p class="text-white/60 text-sm mt-4">
                            <i class="fas fa-arrow-up text-green-400 mr-1"></i>Total destinations
                        </p>
                    </div>

                    <!-- Experiences Stat -->
                    <div class="stat-card-2 rounded-2xl p-6 text-white shadow-lg">
                        <div class="flex justify-between items-start">
                            <div>
                                <p class="text-white/80 text-sm font-semibold mb-1">Experiences</p>
                                <p class="text-4xl font-bold"><%= stats.experiences %></p>
                            </div>
                            <i class="fas fa-star text-4xl opacity-20"></i>
                        </div>
                        <p class="text-white/60 text-sm mt-4">
                            <i class="fas fa-arrow-up text-green-400 mr-1"></i>Total experiences
                        </p>
                    </div>

                    <!-- Packages Stat -->
                    <div class="stat-card-3 rounded-2xl p-6 text-white shadow-lg">
                        <div class="flex justify-between items-start">
                            <div>
                                <p class="text-white/80 text-sm font-semibold mb-1">Packages</p>
                                <p class="text-4xl font-bold"><%= stats.packages %></p>
                            </div>
                            <i class="fas fa-box text-4xl opacity-20"></i>
                        </div>
                        <p class="text-white/60 text-sm mt-4">
                            <i class="fas fa-arrow-up text-green-400 mr-1"></i>Total packages
                        </p>
                    </div>

                    <!-- Bookings Stat -->
                    <div class="stat-card-4 rounded-2xl p-6 text-white shadow-lg">
                        <div class="flex justify-between items-start">
                            <div>
                                <p class="text-white/80 text-sm font-semibold mb-1">Bookings</p>
                                <p class="text-4xl font-bold"><%= stats.bookings %></p>
                            </div>
                            <i class="fas fa-calendar text-4xl opacity-20"></i>
                        </div>
                        <p class="text-white/60 text-sm mt-4">
                            <i class="fas fa-arrow-up text-green-400 mr-1"></i>Total bookings
                        </p>
                    </div>
                </div>

                <!-- Additional Stats -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <!-- Blogs -->
                    <div class="bg-slate-800 rounded-2xl p-6 border border-slate-700">
                        <h3 class="text-lg font-bold text-white mb-4">
                            <i class="fas fa-file-alt text-cyan-400 mr-2"></i>Blogs
                        </h3>
                        <p class="text-3xl font-bold text-cyan-400"><%= stats.blogs %></p>
                        <a href="/admin/blogs" class="text-cyan-400 hover:text-cyan-300 text-sm mt-4 inline-block">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>

                    <!-- Testimonials -->
                    <div class="bg-slate-800 rounded-2xl p-6 border border-slate-700">
                        <h3 class="text-lg font-bold text-white mb-4">
                            <i class="fas fa-comments text-pink-400 mr-2"></i>Testimonials
                        </h3>
                        <p class="text-3xl font-bold text-pink-400"><%= stats.testimonials %></p>
                        <a href="/admin/testimonials" class="text-pink-400 hover:text-pink-300 text-sm mt-4 inline-block">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>

                    <!-- AI Plans -->
                    <div class="bg-slate-800 rounded-2xl p-6 border border-slate-700">
                        <h3 class="text-lg font-bold text-white mb-4">
                            <i class="fas fa-robot text-orange-400 mr-2"></i>AI Plans
                        </h3>
                        <p class="text-3xl font-bold text-orange-400"><%= stats.aiPlans %></p>
                        <a href="/admin/aiplans" class="text-orange-400 hover:text-orange-300 text-sm mt-4 inline-block">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-slate-800 rounded-2xl p-6 border border-slate-700">
                    <h3 class="text-xl font-bold text-white mb-4">
                        <i class="fas fa-bolt text-yellow-400 mr-2"></i>Quick Actions
                    </h3>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                        <a href="/admin/destinations/new" class="bg-red-600/20 hover:bg-red-600/30 text-red-400 px-4 py-2 rounded-lg text-center transition">
                            <i class="fas fa-plus mr-2"></i>New Destination
                        </a>
                        <a href="/admin/experiences/new" class="bg-yellow-600/20 hover:bg-yellow-600/30 text-yellow-400 px-4 py-2 rounded-lg text-center transition">
                            <i class="fas fa-plus mr-2"></i>New Experience
                        </a>
                        <a href="/admin/packages/new" class="bg-purple-600/20 hover:bg-purple-600/30 text-purple-400 px-4 py-2 rounded-lg text-center transition">
                            <i class="fas fa-plus mr-2"></i>New Package
                        </a>
                        <a href="/admin/blogs/new" class="bg-cyan-600/20 hover:bg-cyan-600/30 text-cyan-400 px-4 py-2 rounded-lg text-center transition">
                            <i class="fas fa-plus mr-2"></i>New Blog
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
