<!-- ðŸ”¹ SEARCH & FILTER SECTION -->
<section class="py-12 bg-white dark:bg-slate-800 sticky top-20 z-30 shadow-lg">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-6">
            <!-- Search -->
            <div class="relative">
                <input type="text" id="searchInput" placeholder="Search packages..." class="w-full px-6 py-3 rounded-lg border-2 border-gray-300 dark:border-gray-600 dark:bg-slate-700 dark:text-white focus:border-purple-600 focus:outline-none transition-colors">
                <i class="fas fa-search absolute right-4 top-4 text-gray-400"></i>
            </div>
            
            <!-- Category Filter -->
            <div>
                <select id="categoryFilter" class="w-full px-6 py-3 rounded-lg border-2 border-gray-300 dark:border-gray-600 dark:bg-slate-700 dark:text-white focus:border-purple-600 focus:outline-none transition-colors">
                    <option value="">All Categories</option>
                    <option value="Classic">Classic</option>
                    <option value="Cultural">Cultural</option>
                    <option value="Nature">Nature</option>
                    <option value="Adventure">Adventure</option>
                    <option value="Leisure">Leisure</option>
                    <option value="Spiritual">Spiritual</option>
                    <option value="Wellness">Wellness</option>
                    <option value="Luxury">Luxury</option>
                </select>
            </div>
            
            <!-- Duration Filter -->
            <div>
                <select id="durationFilter" class="w-full px-6 py-3 rounded-lg border-2 border-gray-300 dark:border-gray-600 dark:bg-slate-700 dark:text-white focus:border-purple-600 focus:outline-none transition-colors">
                    <option value="">All Durations</option>
                    <option value="3">3 Days</option>
                    <option value="4">4 Days</option>
                    <option value="5">5 Days</option>
                    <option value="6">6 Days</option>
                    <option value="7">7 Days</option>
                    <option value="8">8+ Days</option>
                </select>
            </div>
        </div>
    </div>
</section>

<!-- ðŸ”¹ PACKAGES GRID -->
<section id="packages" class="py-20 bg-gray-50 dark:bg-slate-900">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">
                Our <span class="gradient-text">Travel Packages</span>
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300">Choose from our collection of expertly designed packages</p>
        </div>
        
        <div id="packagesContainer" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% packages.forEach((pkg, idx) => { %>
                <a href="/packages/<%= pkg.id %>" class="group package-card relative overflow-hidden rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-3 bg-white dark:bg-slate-800 h-full flex flex-col" data-aos="fade-up" data-aos-delay="<%= idx * 80 %>" data-category="<%= pkg.category %>" data-duration="<%= parseInt(pkg.duration) %>">
                    <!-- Image Container with Overlay -->
                    <div class="relative h-64 overflow-hidden bg-gradient-to-br from-purple-400 to-blue-400">
                        <img src="<%= pkg.image %>" alt="<%= pkg.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                        <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent opacity-40 group-hover:opacity-60 transition-opacity duration-300"></div>
                        
                        <!-- Top Badges -->
                        <div class="absolute top-4 left-4 right-4 flex justify-between items-start gap-2 z-10">
                            <span class="bg-gradient-to-r from-purple-600 to-pink-600 text-white px-3 py-1.5 rounded-full text-xs font-bold shadow-lg">
                                <%= pkg.category %>
                            </span>
                            <div class="flex items-center gap-1 bg-yellow-400 text-black px-3 py-1.5 rounded-full shadow-lg">
                                <i class="fas fa-star text-sm"></i>
                                <span class="font-bold text-sm"><%= pkg.rating %></span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Content Section -->
                    <div class="p-5 flex flex-col flex-grow">
                        <!-- Title -->
                        <h3 class="text-lg font-heading font-bold text-gray-800 dark:text-white mb-2 line-clamp-2 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                            <%= pkg.name %>
                        </h3>
                        
                        <!-- Tagline -->
                        <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-2 flex-grow">
                            <%= pkg.tagline %>
                        </p>
                        
                        <!-- Info Grid -->
                        <div class="grid grid-cols-2 gap-2 mb-5 pb-5 border-b border-gray-200 dark:border-gray-700">
                            <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300 text-xs">
                                <i class="fas fa-calendar-days text-blue-600 w-4 flex-shrink-0"></i>
                                <span class="font-medium"><%= pkg.duration %></span>
                            </div>
                            <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300 text-xs">
                                <i class="fas fa-map-pin text-red-600 w-4 flex-shrink-0"></i>
                                <span class="font-medium line-clamp-1"><%= pkg.destination %></span>
                            </div>
                            <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300 text-xs">
                                <i class="fas fa-people-group text-green-600 w-4 flex-shrink-0"></i>
                                <span class="font-medium"><%= pkg.groupSize %></span>
                            </div>
                            <div class="flex items-center gap-2 text-yellow-600 dark:text-yellow-400 text-xs">
                                <i class="fas fa-star text-yellow-500 w-4 flex-shrink-0"></i>
                                <span class="font-bold"><%= pkg.reviews %> reviews</span>
                            </div>
                        </div>
                        
                        <!-- Price & CTA -->
                        <div class="flex items-center justify-between mt-auto gap-4">
                            <div>
                                <p class="text-xs text-gray-600 dark:text-gray-400 font-medium">From</p>
                                <p class="text-xl font-heading font-bold text-purple-600 dark:text-purple-400">
                                    <% const priceStart = pkg.price.split(' - ')[0]; %>
                                    <%= priceStart %>
                                </p>
                            </div>
                            <div class="bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-4 py-2 rounded-lg font-bold text-sm group-hover:shadow-xl transition-all whitespace-nowrap">
                                View <i class="fas fa-arrow-right ml-1"></i>
                            </div>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>
        
        <!-- No Results -->
        <div id="noResults" class="text-center py-16 hidden">
            <i class="fas fa-search text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
            <p class="text-2xl text-gray-600 dark:text-gray-400">No packages match your filters</p>
        </div>
    </div>
</section>

