<% layout('layouts/boilerplate') -%>

<% block('head', `
    <link rel="stylesheet" href="/css/experiences.css">
`) -%>

<body class="bg-white text-gray-800 dark:bg-slate-900 dark:text-slate-100">

<!-- ðŸ”¹ HERO SECTION with Image Background -->
<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
        <img src="<%= blog.image %>" alt="<%= blog.title %>" class="w-full h-full object-cover">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-900/70 via-purple-900/70 to-indigo-900/70"></div>
    </div>
    
    <!-- Content -->
    <div class="relative z-10 container mx-auto px-4 py-20 md:py-32 text-center text-white max-w-4xl" data-aos="fade-up">
        <!-- Category Badge -->
        <div class="inline-block bg-gradient-to-r from-yellow-400 to-orange-500 text-gray-900 px-6 py-2 rounded-full mb-6 font-bold text-sm md:text-base">
            <i class="fas fa-tag mr-2"></i><%= blog.category %>
        </div>
        
        <!-- Title -->
        <h1 class="text-4xl sm:text-5xl md:text-7xl font-heading font-bold mb-6 drop-shadow-lg leading-tight">
            <%= blog.title %>
        </h1>
        
        <!-- Meta Information -->
        <div class="flex flex-col sm:flex-row gap-4 md:gap-8 justify-center items-center text-gray-100 mb-8 flex-wrap" data-aos="fade-up" data-aos-delay="200">
            <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-full bg-gradient-to-r from-yellow-400 to-orange-500 flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-user text-gray-900 font-bold"></i>
                </div>
                <div class="text-left">
                    <div class="font-bold text-white"><%= blog.author %></div>
                    <div class="text-sm text-gray-200"><%= blog.date %></div>
                </div>
            </div>
            
            <div class="hidden sm:block w-1 h-6 bg-white/30"></div>
            
            <div class="flex items-center gap-2">
                <i class="fas fa-clock text-yellow-400 text-lg"></i>
                <span class="font-semibold"><%= blog.readTime %> read</span>
            </div>
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
        <i class="fas fa-chevron-down text-white text-2xl"></i>
    </div>
</section>

<!-- ðŸ”¹ ARTICLE CONTENT SECTION - PURE FOCUS -->
<section class="py-8 md:py-16 bg-white dark:bg-slate-900 min-h-screen flex items-center">
    <div class="container mx-auto px-4 w-full">
        <!-- Article Container - Narrower for better focus -->
        <div class="max-w-3xl mx-auto">
            <!-- Article Body with Maximum Focus - ONLY Content -->
            <article id="articleContent" class="prose dark:prose-invert max-w-none text-xl leading-[1.85] font-serif">
                <%- blog.content %>
            </article>
        </div>
    </div>
</section>

<!-- ðŸ”¹ SUPPLEMENTARY SECTION - After Article -->
<section class="py-16 md:py-24 bg-gradient-to-b from-gray-50 to-white dark:from-slate-800 dark:to-slate-900">
    <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto mb-20">
            <!-- Post Metadata & Actions -->
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-16">
                <!-- Author -->
                <div class="text-center">
                    <div class="text-sm uppercase tracking-widest font-bold text-gray-600 dark:text-gray-400 mb-3">By</div>
                    <p class="text-gray-900 dark:text-white font-semibold"><%= blog.author %></p>
                </div>
                
                <!-- Date -->
                <div class="text-center">
                    <div class="text-sm uppercase tracking-widest font-bold text-gray-600 dark:text-gray-400 mb-3">Date</div>
                    <p class="text-gray-900 dark:text-white font-semibold"><%= blog.date %></p>
                </div>
                
                <!-- Read Time -->
                <div class="text-center">
                    <div class="text-sm uppercase tracking-widest font-bold text-gray-600 dark:text-gray-400 mb-3">Read Time</div>
                    <p class="text-gray-900 dark:text-white font-semibold"><%= blog.readTime %></p>
                </div>
                
                <!-- Category -->
                <div class="text-center">
                    <div class="text-sm uppercase tracking-widest font-bold text-gray-600 dark:text-gray-400 mb-3">Category</div>
                    <p class="text-gray-900 dark:text-white font-semibold"><%= blog.category %></p>
                </div>
            </div>

            <!-- Tags -->
            <% if (blog.tags && blog.tags.length > 0) { %>
                <div class="mb-12 pb-12 border-b border-gray-200 dark:border-slate-700">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Topics Covered</h3>
                    <div class="flex flex-wrap gap-2">
                        <% blog.tags.forEach(tag => { %>
                            <a href="#" class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-500/15 to-purple-500/15 dark:from-blue-500/25 dark:to-purple-500/25 text-blue-700 dark:text-blue-300 px-3 py-1.5 rounded-full text-sm font-semibold border border-blue-200/50 dark:border-blue-400/20 hover:bg-blue-100 dark:hover:bg-blue-500/40 transition-all">
                                <i class="fas fa-tag text-xs"></i> <%= tag %>
                            </a>
                        <% }); %>
                    </div>
                </div>
            <% } %>

            <!-- Share Buttons -->
            <div class="mb-12 pb-12 border-b border-gray-200 dark:border-slate-700">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Share This Article</h3>
                <div class="flex flex-wrap gap-3">
                    <a href="https://www.facebook.com/sharer/sharer.php?u=<%= `https://example.com/blogs/${blog._id}` %>" target="_blank" class="flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-full text-sm font-semibold transition-all hover:scale-105 active:scale-95">
                        <i class="fab fa-facebook"></i>
                        <span class="hidden sm:inline">Facebook</span>
                    </a>
                    <a href="https://twitter.com/intent/tweet?url=<%= `https://example.com/blogs/${blog._id}` %>&text=<%= blog.title %>" target="_blank" class="flex items-center gap-2 bg-blue-400 hover:bg-blue-500 text-white px-4 py-2 rounded-full text-sm font-semibold transition-all hover:scale-105 active:scale-95">
                        <i class="fab fa-twitter"></i>
                        <span class="hidden sm:inline">Twitter</span>
                    </a>
                    <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= `https://example.com/blogs/${blog._id}` %>" target="_blank" class="flex items-center gap-2 bg-blue-700 hover:bg-blue-800 text-white px-4 py-2 rounded-full text-sm font-semibold transition-all hover:scale-105 active:scale-95">
                        <i class="fab fa-linkedin"></i>
                        <span class="hidden sm:inline">LinkedIn</span>
                    </a>
                    <button onclick="navigator.clipboard.writeText('<%= `https://example.com/blogs/${blog._id}` %>'); showCopyNotification()" class="flex items-center gap-2 bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white px-4 py-2 rounded-full text-sm font-semibold transition-all hover:scale-105 active:scale-95">
                        <i class="fas fa-link"></i>
                        <span class="hidden sm:inline">Copy Link</span>
                    </button>
                </div>
            </div>

            <!-- Author Bio -->
            <div>
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">About the Author</h3>
                <div class="bg-white/40 dark:bg-slate-800/40 backdrop-blur-sm rounded-xl p-6 border border-gray-200/50 dark:border-slate-700/50">
                    <div class="flex flex-col sm:flex-row gap-4 items-start">
                        <!-- Author Avatar -->
                        <div class="w-20 h-20 rounded-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center flex-shrink-0 shadow-lg">
                            <i class="fas fa-user text-white text-2xl"></i>
                        </div>
                        
                        <!-- Author Info -->
                        <div class="flex-1">
                            <h4 class="font-bold text-gray-900 dark:text-white"><%= blog.author %></h4>
                            <p class="text-gray-700 dark:text-gray-300 text-sm mb-3 leading-relaxed">
                                Passionate travel writer and photographer exploring India's hidden gems. With over 5 years of experience, <%= blog.author %> brings authentic stories and practical insights from every corner of India.
                            </p>
                            <div class="flex gap-3 flex-wrap">
                                <a href="#" class="inline-flex items-center gap-1 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-semibold text-xs">
                                    <i class="fab fa-twitter"></i> Follow
                                </a>
                                <a href="#" class="inline-flex items-center gap-1 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-semibold text-xs">
                                    <i class="fab fa-linkedin"></i> Connect
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ðŸ”¹ RELATED BLOGS SECTION - Optional -->
<% if (relatedBlogs && relatedBlogs.length > 0) { %>
    <section class="py-16 md:py-20 bg-white dark:bg-slate-900">
        <div class="container mx-auto px-4">
            <div class="max-w-3xl mx-auto mb-12">
                <h2 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 dark:text-white mb-2">
                    More Articles
                </h2>
                <p class="text-gray-600 dark:text-gray-400">
                    Explore other travel guides and insights
                </p>
            </div>
            
            <!-- Related Articles Grid - Compact -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-5xl mx-auto">
                <% relatedBlogs.slice(0, 4).forEach((relatedBlog, idx) => { %>
                    <a href="/blogs/<%= relatedBlog._id || relatedBlog.id %>" class="group rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-all duration-300 bg-white dark:bg-slate-800 flex flex-row border border-gray-100 dark:border-slate-700" data-aos="fade-up" data-aos-delay="<%= idx * 100 %>">
                        <!-- Image -->
                        <div class="w-32 h-32 flex-shrink-0 overflow-hidden">
                            <img src="<%= relatedBlog.image %>" alt="<%= relatedBlog.title %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                        </div>
                        
                        <!-- Content -->
                        <div class="p-4 flex flex-col justify-between flex-1">
                            <div>
                                <h3 class="font-bold text-gray-900 dark:text-white mb-1 line-clamp-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors text-sm">
                                    <%= relatedBlog.title %>
                                </h3>
                                <p class="text-gray-500 dark:text-gray-400 text-xs"><%= relatedBlog.category %></p>
                            </div>
                            <div class="text-xs text-gray-500 dark:text-gray-500 mt-2">
                                <%= relatedBlog.readTime %>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>
        </div>
    </section>
<% } %>

<!-- ðŸ”¹ CTA SECTION -->
<section class="py-16 md:py-24 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 dark:from-blue-700 dark:via-purple-700 dark:to-indigo-700 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><path d=%22M0,50 Q25,25 50,50 T100,50%22 fill=%22none%22 stroke=%22white%22 stroke-width=%220.5%22/></svg>'); background-size: 50px 50px;"></div>
    </div>
    
    <div class="container mx-auto px-4 text-center relative z-10">
        <h2 class="text-4xl md:text-6xl font-heading font-bold text-white mb-6" data-aos="fade-up">
            Ready for Your <span class="text-yellow-300">Next Adventure?</span>
        </h2>
        <p class="text-xl text-gray-100 mb-12 max-w-3xl mx-auto" data-aos="fade-up" data-aos-delay="200">
            Discover amazing travel experiences, expert-curated packages, and unforgettable memories across India
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center flex-wrap" data-aos="fade-up" data-aos-delay="400">
            <a href="/packages" class="bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-gray-900 px-8 md:px-12 py-4 rounded-full font-bold text-lg shadow-xl hover:shadow-2xl transition-all hover:scale-105 active:scale-95 inline-flex items-center gap-2">
                <i class="fas fa-suitcase"></i>
                Explore Packages
            </a>
            <a href="/experiences" class="border-2 border-white text-white px-8 md:px-12 py-4 rounded-full font-bold text-lg hover:bg-white hover:text-blue-600 transition-all hover:scale-105 active:scale-95 inline-flex items-center gap-2">
                <i class="fas fa-compass"></i>
                View Experiences
            </a>
            <a href="/" class="bg-white/20 backdrop-blur-xl text-white px-8 md:px-12 py-4 rounded-full font-bold text-lg border border-white/30 hover:bg-white/30 transition-all hover:scale-105 active:scale-95 inline-flex items-center gap-2">
                <i class="fas fa-home"></i>
                Back Home
            </a>
        </div>
    </div>
</section>

<!-- ðŸ”¹ CUSTOM STYLES FOR ARTICLE CONTENT -->
<style>
    .gradient-text {
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Article Content - Main Focus */
    #articleContent {
        color: #1f2937;
        font-family: 'Georgia', 'Garamond', serif;
        background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(59, 130, 246, 0.02));
        padding: 2rem 0;
    }
    
    .dark #articleContent {
        color: #f1f5f9;
        background: linear-gradient(to bottom, rgba(15,23,42,0), rgba(59, 130, 246, 0.05));
    }
    
    #articleContent p {
        font-size: 1.25rem;
        line-height: 1.95;
        margin-bottom: 2rem;
        text-align: left;
        letter-spacing: 0.3px;
    }
    
    #articleContent h2 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-top: 3rem;
        margin-bottom: 1.5rem;
        color: #0f172a;
        line-height: 1.2;
        letter-spacing: -0.5px;
    }

    .dark #articleContent h2 {
        color: #f8fafc;
    }
    
    #articleContent h3 {
        font-size: 1.875rem;
        font-weight: 700;
        margin-top: 2.5rem;
        margin-bottom: 1.25rem;
        color: #1e40af;
        line-height: 1.3;
    }
    
    .dark #articleContent h3 {
        color: #60a5fa;
    }

    #articleContent h4 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: #1f2937;
    }

    .dark #articleContent h4 {
        color: #e2e8f0;
    }
    
    #articleContent ul,
    #articleContent ol {
        margin: 2rem 0 2rem 2.5rem;
        line-height: 1.95;
    }
    
    #articleContent li {
        margin-bottom: 1rem;
        font-size: 1.125rem;
    }

    #articleContent blockquote {
        border-left: 6px solid #3b82f6;
        padding-left: 2rem;
        margin: 2.5rem 0;
        font-size: 1.1rem;
        font-style: italic;
        color: #475569;
        background: rgba(59, 130, 246, 0.05);
        padding: 1.5rem 1.5rem 1.5rem 2rem;
        border-radius: 0.5rem;
    }

    .dark #articleContent blockquote {
        color: #cbd5e1;
        border-left-color: #60a5fa;
        background: rgba(59, 130, 246, 0.1);
    }
    
    #articleContent a {
        color: #1d4ed8;
        font-weight: 600;
        text-decoration: none;
        border-bottom: 3px solid transparent;
        transition: all 0.3s ease;
        padding-bottom: 2px;
    }
    
    .dark #articleContent a {
        color: #60a5fa;
    }
    
    #articleContent a:hover {
        border-bottom-color: #3b82f6;
        color: #1e40af;
    }

    .dark #articleContent a:hover {
        color: #93c5fd;
        border-bottom-color: #60a5fa;
    }

    #articleContent img {
        max-width: 100%;
        height: auto;
        border-radius: 1rem;
        margin: 3rem 0;
        box-shadow: 0 20px 40px rgba(59, 130, 246, 0.15);
        border: 1px solid rgba(59, 130, 246, 0.1);
    }

    .dark #articleContent img {
        box-shadow: 0 20px 40px rgba(59, 130, 246, 0.3);
        border: 1px solid rgba(59, 130, 246, 0.2);
    }

    #articleContent code {
        background-color: #f3f4f6;
        color: #dc2626;
        padding: 0.35rem 0.65rem;
        border-radius: 0.375rem;
        font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
        font-size: 0.95rem;
    }

    .dark #articleContent code {
        background-color: #1f2937;
        color: #fca5a5;
    }

    #articleContent pre {
        background: linear-gradient(to bottom, #1f2937, #111827);
        color: #e5e7eb;
        padding: 2rem;
        border-radius: 0.75rem;
        overflow-x: auto;
        margin: 2.5rem 0;
        border: 1px solid rgba(59, 130, 246, 0.2);
    }

    #articleContent pre code {
        background-color: transparent;
        color: inherit;
        padding: 0;
        font-size: 0.95rem;
    }

    /* Typography Enhancement for Focus */
    #articleContent strong {
        font-weight: 700;
        color: #0f172a;
    }

    .dark #articleContent strong {
        color: #f1f5f9;
    }

    #articleContent em {
        font-style: italic;
    }
</style>

<% block('scripts') %>
<script>
    // Copy to clipboard notification
    function showCopyNotification() {
        const btn = event.target.closest('button');
        const originalText = btn.innerHTML;
        
        btn.innerHTML = '<i class="fas fa-check text-lg"></i><span class="hidden sm:inline">Copied!</span>';
        btn.classList.add('bg-green-500', 'from-green-500');
        
        setTimeout(() => {
            btn.innerHTML = originalText;
            btn.classList.remove('bg-green-500', 'from-green-500');
        }, 2000);
    }

    // Initialize AOS (Animate On Scroll)
    if (window.AOS) {
        AOS.init({
            duration: 800,
            offset: 100,
            once: true
        });
    }

    // Smooth scroll for links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            const href = this.getAttribute('href');
            if (href !== '#') {
                e.preventDefault();
                const target = document.querySelector(href);
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            }
        });
    });
</script>

</body>
</html>
