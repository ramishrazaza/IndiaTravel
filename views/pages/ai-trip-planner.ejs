    function toggleDayAccordion(button) {
        const item = button.closest('.day-accordion-item');
        const details = item.querySelector('.day-details');
        const chevron = button.querySelector('.chevron-icon i');
        
        // Close all other accordion items
        document.querySelectorAll('.day-accordion-item').forEach(el => {
            if (el !== item) {
                el.querySelector('.day-details').classList.add('hidden');
                el.querySelector('.day-details').style.maxHeight = '0';
                el.querySelector('.chevron-icon i').style.transform = 'rotate(0deg)';
            }
        });
        
        // Toggle current item
        const isHidden = details.classList.toggle('hidden');
        
        if (isHidden) {
            details.style.maxHeight = '0';
            chevron.style.transform = 'rotate(0deg)';
        } else {
            details.style.maxHeight = details.scrollHeight + 'px';
            chevron.style.transform = 'rotate(180deg)';
        }
    }

