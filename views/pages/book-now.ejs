                        <option value="">Select month</option>
                        <% months.forEach(month => { %>
                            <option value="<%= month %>"><%= month %></option>
                        <% }); %>
                    </select>
                </div>

                <!-- Travelers -->
                <div data-aos="fade-up" data-aos-delay="200">
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                        <i class="fas fa-people-group text-blue-600 mr-2"></i>How many travelers?
                    </label>
                    <select id="bookTravelers" name="travelers" class="w-full px-4 py-3 rounded-lg border-2 border-gray-300 dark:border-gray-600 dark:bg-slate-700 dark:text-white focus:border-blue-600 focus:outline-none text-base" required>
