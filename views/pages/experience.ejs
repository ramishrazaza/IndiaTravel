<% layout('layouts/boilerplate') -%>

<% block('head', `
    <link rel="stylesheet" href="/css/destination.css">
`) -%>

<!-- üîπ 1. HERO SECTION -->
<section id="hero" class="hero-section">
    <!-- Hero Image -->
    <img src="<%= experience.image %>" alt="<%= experience.name %>" class="hero-image">
    <div class="hero-overlay"></div>
    
    <!-- Hero Content -->
    <div class="hero-content">
        <h1 class="hero-title fade-in">
            <%= experience.name %>
        </h1>
        <p class="hero-tagline fade-in" data-aos="fade-up" data-aos-delay="200">
            <%= experience.tagline %>
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col md:flex-row gap-6 justify-center items-center mt-8" data-aos="fade-up" data-aos-delay="400">
            <a href="#book" class="bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-12 py-4 rounded-full font-bold text-lg hover:shadow-2xl hover:scale-105 transition-all duration-300 ripple">
                Book Now
            </a>
            <a href="#details" class="border-2 border-white text-white px-12 py-4 rounded-full font-bold text-lg hover:bg-white hover:text-purple-600 transition-all duration-300">
                View Details ‚Üì
            </a>
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
        <i class="fas fa-chevron-down text-white text-2xl"></i>
    </div>
</section>

<!-- üîπ 2. QUICK FACTS BAR -->
<section id="quick-facts" class="quick-facts-section">
    <div class="container mx-auto px-4">
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-2xl p-8 md:p-10 transform -translate-y-16">
            <div class="grid grid-cols-2 md:grid-cols-5 gap-6 md:gap-8">
                <div class="flex flex-col items-center justify-center text-center">
                    <div class="text-4xl mb-3">üéØ</div>
                    <h4 class="text-xs md:text-sm font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest mb-2">Category</h4>
                    <p class="text-base md:text-lg font-bold text-gray-900 dark:text-white break-words"><%= experience.category %></p>
                </div>
                
                <div class="flex flex-col items-center justify-center text-center">
                    <div class="text-4xl mb-3">‚è≥</div>
                    <h4 class="text-xs md:text-sm font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest mb-2">Duration</h4>
                    <p class="text-base md:text-lg font-bold text-gray-900 dark:text-white break-words"><%= experience.duration %></p>
                </div>
                
                <div class="flex flex-col items-center justify-center text-center">
                    <div class="text-4xl mb-3">üìç</div>
                    <h4 class="text-xs md:text-sm font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest mb-2">Location</h4>
                    <p class="text-base md:text-lg font-bold text-gray-900 dark:text-white break-words"><%= experience.location %></p>
                </div>
                
                <div class="flex flex-col items-center justify-center text-center">
                    <div class="text-4xl mb-3">üë•</div>
                    <h4 class="text-xs md:text-sm font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest mb-2">Group Size</h4>
                    <p class="text-base md:text-lg font-bold text-gray-900 dark:text-white break-words"><%= experience.groupSize %></p>
                </div>
                
                <div class="flex flex-col items-center justify-center text-center">
                    <div class="text-4xl mb-3">üí∞</div>
                    <h4 class="text-xs md:text-sm font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest mb-2">Price</h4>
                    <p class="text-base md:text-lg font-bold text-purple-600 dark:text-purple-400 break-words"><%= experience.price %></p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- üîπ 3. EXPERIENCE OVERVIEW -->
<section id="details" class="about-section">
    <div class="container mx-auto px-4">
        <div class="about-container">
            <div class="about-image" data-aos="fade-right">
                <img src="<%= experience.image %>" alt="<%= experience.name %>">
            </div>
            
            <div class="about-content" data-aos="fade-left">
                <h2 class="about-title">
                    About this <span class="gradient-text">Experience</span>
                </h2>
                <div class="about-text">
                    <%- experience.fullDescription %>
                </div>
                
                <!-- Rating -->
                <div class="flex items-center gap-4 my-6">
                    <div class="flex text-yellow-400">
                        <% for(let i = 0; i < Math.floor(experience.rating); i++) { %>
                            <i class="fas fa-star text-lg"></i>
                        <% } %>
                        <% if(experience.rating % 1 !== 0) { %>
                            <i class="fas fa-star-half-alt text-lg"></i>
                        <% } %>
                    </div>
                    <span class="font-semibold text-gray-700 dark:text-gray-300"><%= experience.rating %> (<%= experience.reviews %> reviews)</span>
                </div>
                
                <div class="flex gap-4 mt-8">
                    <a href="#book" class="cta-btn-primary">
                        Book This Experience
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- üîπ 4. ITINERARY SECTION -->
<section id="itinerary" class="py-20 bg-gray-50 dark:bg-slate-800">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">
                <span class="gradient-text">Detailed Itinerary</span>
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300">Day-by-day breakdown of your experience</p>
        </div>
        
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            <% experience.itinerary.forEach((day, idx) => { %>
                <div class="card-modern p-6 rounded-lg" data-aos="fade-up" data-aos-delay="<%= idx * 100 %>">
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-600 to-blue-600 flex items-center justify-center text-white font-bold text-lg">
                            <% if (typeof day.day === 'string') { %>
                                <%= day.day.split('-')[0] %>-<%= day.day.split('-')[1] %>
                            <% } else { %>
                                <%= day.day %>
                            <% } %>
                        </div>
                        <h3 class="text-lg font-bold text-gray-800 dark:text-white"><%= day.title %></h3>
                    </div>
                    <ul class="space-y-2">
                        <% day.activities.forEach(activity => { %>
                            <li class="flex items-start gap-2 text-gray-700 dark:text-gray-300">
                                <i class="fas fa-check-circle text-green-500 mt-1 flex-shrink-0"></i>
                                <span><%= activity %></span>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- üîπ 5. HIGHLIGHTS SECTION -->
<section id="highlights" class="py-20">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">
                Experience <span class="gradient-text">Highlights</span>
            </h2>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% experience.highlights.forEach((highlight, idx) => { %>
                <div class="text-center p-6 rounded-lg bg-gradient-to-br from-purple-50 to-blue-50 dark:from-purple-900/20 dark:to-blue-900/20 hover:shadow-lg transition-all duration-300" data-aos="fade-up" data-aos-delay="<%= idx * 80 %>">
                    <i class="fas fa-star text-3xl text-yellow-400 mb-3"></i>
                    <p class="font-semibold text-gray-800 dark:text-white"><%= highlight %></p>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- üîπ 6. INCLUDES & EXCLUDES -->
<section class="py-20 bg-gradient-to-b from-gray-50 to-white dark:from-slate-800 dark:to-slate-900">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-12">
            <!-- Includes -->
            <div data-aos="fade-right" class="bg-white dark:bg-slate-700 rounded-2xl p-10 shadow-lg hover:shadow-xl transition-shadow">
                <h3 class="text-3xl font-heading font-bold mb-8 flex items-center gap-3 text-gray-800 dark:text-white">
                    <span class="text-4xl">‚úì</span> What's Included
                </h3>
                <ul class="space-y-4">
                    <% experience.includes.forEach((item, idx) => { %>
                        <li class="flex items-start gap-4 text-gray-700 dark:text-gray-200 p-3 rounded-lg hover:bg-green-50 dark:hover:bg-green-900/20 transition-colors" data-aos="fade-right" data-aos-delay="<%= idx * 50 %>">
                            <span class="w-6 h-6 rounded-full bg-green-500 text-white flex items-center justify-center flex-shrink-0 font-bold text-sm">‚úì</span>
                            <span class="text-lg"><%= item %></span>
                        </li>
                    <% }); %>
                </ul>
            </div>
            
            <!-- Excludes -->
            <div data-aos="fade-left" class="bg-white dark:bg-slate-700 rounded-2xl p-10 shadow-lg hover:shadow-xl transition-shadow">
                <h3 class="text-3xl font-heading font-bold mb-8 flex items-center gap-3 text-gray-800 dark:text-white">
                    <span class="text-4xl">‚úï</span> What's Not Included
                </h3>
                <ul class="space-y-4">
                    <% experience.excludes.forEach((item, idx) => { %>
                        <li class="flex items-start gap-4 text-gray-700 dark:text-gray-200 p-3 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors" data-aos="fade-left" data-aos-delay="<%= idx * 50 %>">
                            <span class="w-6 h-6 rounded-full bg-red-500 text-white flex items-center justify-center flex-shrink-0 font-bold text-sm">‚úï</span>
                            <span class="text-lg"><%= item %></span>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- üîπ 7. ADDITIONAL INFO -->
<section class="py-20">
    <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-12">
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 rounded-2xl p-10 border-l-4 border-blue-500 hover:shadow-lg transition-shadow" data-aos="fade-up">
                <h3 class="text-2xl font-heading font-bold mb-4 text-gray-800 dark:text-white flex items-center gap-3">
                    <span class="text-4xl">üìÖ</span> Best Season
                </h3>
                <p class="text-lg text-gray-700 dark:text-gray-300"><%= experience.bestSeason %></p>
            </div>
            
            <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-red-900/20 dark:to-red-800/20 rounded-2xl p-10 border-l-4 border-red-500 hover:shadow-lg transition-shadow" data-aos="fade-up" data-aos-delay="100">
                <h3 class="text-2xl font-heading font-bold mb-4 text-gray-800 dark:text-white flex items-center gap-3">
                    <span class="text-4xl">üí™</span> Physical Requirement
                </h3>
                <p class="text-lg text-gray-700 dark:text-gray-300"><%= experience.physicalRequirement %></p>
            </div>
        </div>
    </div>
</section>

<!-- üîπ 8. BOOKING SECTION -->
<section id="book" class="py-24 bg-gradient-to-r from-blue-600 via-purple-600 to-purple-700 dark:from-blue-700 dark:via-purple-700 dark:to-purple-800 relative overflow-hidden">
    <!-- Animated background shapes -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-purple-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
    <div class="absolute bottom-0 left-0 w-80 h-80 bg-blue-400 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse"></div>
    
    <div class="container mx-auto px-4 relative z-10 text-center" data-aos="fade-up">
        <h2 class="text-4xl md:text-5xl font-heading font-bold text-white mb-6">Ready to Experience India?</h2>
        <p class="text-xl text-gray-100 mb-10 max-w-2xl mx-auto leading-relaxed">Book your <%= experience.name %> experience today and create unforgettable memories exploring the beauty of India</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a href="#" class="bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-14 py-5 rounded-full font-bold text-lg hover:shadow-2xl hover:scale-105 transition-all duration-300 ripple">
                <i class="fas fa-calendar-check mr-2"></i> Book Now - <%= experience.price.split(' - ')[0] %>
            </a>
            <a href="#details" class="border-2 border-white text-white px-14 py-5 rounded-full font-bold text-lg hover:bg-white hover:text-purple-600 transition-all duration-300">
                <i class="fas fa-info-circle mr-2"></i> Learn More
            </a>
        </div>
    </div>
</section>

<!-- üîπ 9. SIMILAR EXPERIENCES -->
<% if (similarExperiences && similarExperiences.length > 0) { %>
    <section class="py-20 bg-gray-50 dark:bg-slate-800">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16" data-aos="fade-up">
                <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">
                    More <span class="gradient-text"><%= experience.category %></span> Experiences
                </h2>
                <p class="text-xl text-gray-600 dark:text-gray-300">Explore other amazing experiences in the same category</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <% similarExperiences.forEach((exp, idx) => { %>
                    <a href="/experiences/<%= exp.id %>" class="group relative rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 h-80" data-aos="fade-up" data-aos-delay="<%= idx * 100 %>">
                        <img src="<%= exp.image %>" alt="<%= exp.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                        
                        <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>
                        
                        <div class="absolute inset-0 p-6 flex flex-col justify-between">
                            <div class="flex justify-between items-start">
                                <span class="tag-pill bg-purple-500 text-white font-semibold text-xs py-1 px-3 rounded-full">
                                    <%= exp.category %>
                                </span>
                                <div class="flex text-yellow-400 bg-black bg-opacity-50 px-3 py-1 rounded-full">
                                    <i class="fas fa-star text-xs"></i>
                                    <span class="ml-1 text-xs font-semibold text-white"><%= exp.rating %></span>
                                </div>
                            </div>
                            
                            <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                <h3 class="text-xl font-bold text-white mb-2"><%= exp.name %></h3>
                                <p class="text-gray-200 text-sm mb-4"><%= exp.duration %> ‚Ä¢ <%= exp.location %></p>
                                <span class="inline-block bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-6 py-2 rounded-lg font-semibold text-sm">
                                    View <i class="fas fa-arrow-right ml-2"></i>
                                </span>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>
        </div>
    </section>
<% } %>

<% block('scripts') %>
<script>
    // Initialize AOS
    if (window.AOS) {
        AOS.init({
            duration: 800,
            offset: 100,
            once: true
        });
    }
</script>
