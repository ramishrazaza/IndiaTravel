<% layout('layouts/boilerplate') -%>

<% block('head', `
    <link rel="stylesheet" href="/css/experiences.css">
`) -%>

<body class="bg-white text-gray-800 dark:bg-slate-900 dark:text-slate-100">

<!-- üîπ HERO SECTION -->
<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Video Background with Multiple Sources -->
    <video autoplay muted loop playsinline class="absolute inset-0 w-full h-full object-cover">
        <source src="https://videos.pexels.com/video-files/2169880/2169880-uhd_2560_1440_25fps.mp4" type="video/mp4">
        <source src="https://videos.pexels.com/video-files/2169880/2169880-hd_1920_1080_30fps.mp4" type="video/mp4">
    </video>
    <!-- Fallback Image -->
    <img src="https://images.unsplash.com/photo-1524522252454-d5441bcab4d0?w=1920&h=1080&fit=crop" alt="India Destinations" class="absolute inset-0 w-full h-full object-cover" id="heroFallback" style="display: none;">
    
    <!-- Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900/70 via-purple-900/70 to-indigo-900/70"></div>
    
    <!-- Content -->
    <div class="relative z-10 container mx-auto px-4 py-20 md:py-32 text-center text-white">
        <h1 class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-heading font-bold mb-4 md:mb-6" data-aos="fade-up">
            Explore India's<br>
            <span class="gradient-text" style="-webkit-text-fill-color: white;">Most Enchanting Destinations</span>
        </h1>
        <p class="text-sm sm:text-base md:text-xl lg:text-2xl mb-8 md:mb-12 text-gray-200 max-w-3xl mx-auto px-2" data-aos="fade-up" data-aos-delay="200">
            From snow-capped mountains to sun-kissed beaches ‚Ä¢ Ancient temples to bustling cities
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex max-w-3xl xs:flex-row gap-3 md:gap-4 justify-center mx-auto" data-aos="fade-up" data-aos-delay="400">
            <a href="#destinations" class="bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-6 md:px-10 py-3 md:py-4 rounded-full font-semibold text-sm md:text-lg hover:shadow-2xl hover:scale-105 transition-all inline-block w-full xs:w-auto text-center">
                <i class="fas fa-map mr-2"></i>Browse Destinations
            </a>
            <a href="/" class="glass text-white px-6 md:px-10 py-3 md:py-4 rounded-full font-semibold text-sm md:text-lg border-2 border-white hover:bg-white hover:text-blue-600 transition-all inline-block w-full xs:w-auto text-center">
                <i class="fas fa-home mr-2"></i>Back Home
            </a>
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
        <i class="fas fa-chevron-down text-white text-2xl"></i>
    </div>
</section>

<!-- üîπ SEARCH & FILTER SECTION - Sticky -->
<section class="sticky top-20 z-40 bg-white/80 dark:bg-slate-900/80 backdrop-blur-xl border-b border-gray-200/50 dark:border-slate-700/50 shadow-lg">
    <div class="container mx-auto px-4 py-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 md:gap-4">
            <!-- Search Input -->
            <div class="relative">
                <input type="text" id="searchInput" placeholder="Search destinations..." class="w-full px-4 md:px-6 py-2.5 md:py-3 rounded-xl bg-white/50 dark:bg-slate-800/50 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 border border-gray-300/50 dark:border-slate-700/50 focus:border-blue-500 dark:focus:border-blue-400 focus:ring-2 focus:ring-blue-500/30 outline-none transition-all text-sm md:text-base">
                <i class="fas fa-search absolute right-4 top-2.5 md:top-3.5 text-gray-400"></i>
            </div>
            
            <!-- Region Filter -->
            <div>
                <select id="regionFilter" class="w-full px-4 md:px-6 py-2.5 md:py-3 rounded-xl bg-white/50 dark:bg-slate-800/50 text-gray-900 dark:text-white border border-gray-300/50 dark:border-slate-700/50 focus:border-blue-500 dark:focus:border-blue-400 focus:ring-2 focus:ring-blue-500/30 outline-none transition-all text-sm md:text-base font-medium">
                    <option value="">All Regions</option>
                    <option value="north">North India</option>
                    <option value="south">South India</option>
                    <option value="west">West India</option>
                    <option value="east">East India</option>
                    <option value="northeast">Northeast India</option>
                    <option value="central">Central India</option>
                </select>
            </div>
        </div>
    </div>
</section>

<!-- üîπ DESTINATIONS GRID SECTION -->
<section id="destinations" class="py-16 md:py-24 bg-gradient-to-b from-white to-gray-50 dark:from-slate-900 dark:to-slate-800">
    <div class="container mx-auto px-4">
        <!-- Section Header -->
        <div class="text-center mb-16 max-w-3xl mx-auto" data-aos="fade-up">
            <h2 class="text-4xl sm:text-5xl md:text-6xl font-heading font-bold text-gray-900 dark:text-white mb-4">
                Featured <span class="gradient-text">Destinations</span>
            </h2>
            <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300">
                Discover carefully curated destinations across India's most beautiful regions
            </p>
        </div>

        <!-- Destinations Grid - 3 columns -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8" id="destinationsGrid">
            <% destinations.forEach((destination, index) => { %>
                <a href="/destinations/place?name=<%= destination.name %>&region=<%=destination.region%>" class="group destination-card rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-3 bg-white dark:bg-slate-800 h-full flex flex-col border border-gray-100 dark:border-slate-700" data-aos="fade-up" data-aos-delay="<%= index * 80 %>" data-region="<%= destination.region.toLowerCase() %>" data-name="<%= destination.name.toLowerCase() %>">
                    <!-- Image Container with Overlay -->
                    <div class="relative h-72 overflow-hidden bg-gradient-to-br from-blue-400 to-purple-500">
                        <img src="<%= destination.image %>" alt="<%= destination.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" loading="lazy">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent opacity-40 group-hover:opacity-60 transition-opacity duration-300"></div>
                        
                        <!-- Badges -->
                        <div class="absolute top-4 left-4 right-4 flex justify-between items-start gap-2 z-10">
                            <span class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-4 py-1.5 rounded-full text-xs font-bold shadow-lg">
                                <%= destination.region %>
                            </span>
                            <div class="flex items-center gap-1.5 bg-gradient-to-r from-yellow-400 to-orange-500 text-gray-900 px-4 py-1.5 rounded-full shadow-lg font-bold">
                                <i class="fas fa-star text-sm"></i>
                                <span class="text-sm"><%= destination.rating %></span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Content Section -->
                    <div class="p-6 md:p-8 flex flex-col flex-grow">
                        <!-- Title -->
                        <h3 class="text-xl md:text-2xl font-heading font-bold text-gray-900 dark:text-white mb-2 line-clamp-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                            <%= destination.name %>
                        </h3>
                        
                        <!-- Description -->
                        <p class="text-gray-600 dark:text-gray-400 text-sm md:text-base mb-5 line-clamp-2 flex-grow leading-relaxed">
                            <%= destination.description %>
                        </p>
                        
                        <!-- Info Grid -->
                        <div class="grid grid-cols-2 gap-3 mb-6 pb-6 border-b border-gray-200 dark:border-slate-700">
                            <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300 text-xs md:text-sm">
                                <div class="w-8 h-8 rounded-lg bg-yellow-100 dark:bg-yellow-900/30 flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-sun text-yellow-600 dark:text-yellow-400"></i>
                                </div>
                                <div>
                                    <span class="font-semibold"><%= destination.temperature %></span>
                                </div>
                            </div>
                            <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300 text-xs md:text-sm">
                                <div class="w-8 h-8 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center flex-shrink-0">
                                    <i class="fas fa-calendar text-blue-600 dark:text-blue-400"></i>
                                </div>
                                <div>
                                    <span class="font-semibold line-clamp-1"><%= destination.bestTimeToVisit %></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Highlights -->
                        <% if (destination.highlights && destination.highlights.length > 0) { %>
                            <div class="flex flex-wrap gap-2 mb-6">
                                <% destination.highlights.slice(0, 3).forEach(highlight => { %>
                                    <span class="text-xs bg-gradient-to-r from-blue-100 to-purple-100 dark:from-blue-900/40 dark:to-purple-900/40 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-full font-semibold">
                                        <%= highlight %>
                                    </span>
                                <% }); %>
                            </div>
                        <% } %>
                        
                        <!-- CTA Button -->
                        <button class="w-full text-center bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-white px-4 py-3 rounded-xl font-semibold text-sm md:text-base hover:shadow-xl transition-all duration-300 flex items-center justify-center gap-2 group/btn">
                            Explore <i class="fas fa-arrow-right group-hover/btn:translate-x-1 transition-transform"></i>
                        </button>
                    </div>
                </a>
            <% }); %>
        </div>
    </div>
</section>

<!-- üîπ CTA SECTION -->
<section class="py-16 md:py-24 bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 dark:from-blue-700 dark:via-purple-700 dark:to-indigo-700 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><path d=%22M0,50 Q25,25 50,50 T100,50%22 fill=%22none%22 stroke=%22white%22 stroke-width=%220.5%22/></svg>'); background-size: 50px 50px;"></div>
    </div>
    
    <div class="container mx-auto px-4 text-center relative z-10">
        <h2 class="text-4xl md:text-6xl font-heading font-bold text-white mb-6" data-aos="fade-up">
            Ready for Your <span class="text-yellow-300">Indian Adventure?</span>
        </h2>
        <p class="text-lg md:text-xl text-gray-100 mb-12 max-w-3xl mx-auto" data-aos="fade-up" data-aos-delay="200">
            Choose your destination and let us help you plan an unforgettable journey across India
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center flex-wrap" data-aos="fade-up" data-aos-delay="400">
            <a href="/plan-trip" class="bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-8 md:px-12 py-4 rounded-full font-bold text-lg shadow-xl hover:shadow-2xl transition-all hover:scale-105 active:scale-95 inline-flex items-center gap-2">
                <i class="fas fa-map"></i>
                Plan Trip Now
            </a>
            <a href="/packages" class="border-2 border-white text-white px-8 md:px-12 py-4 rounded-full font-bold text-lg hover:bg-white hover:text-blue-600 transition-all hover:scale-105 active:scale-95 inline-flex items-center gap-2">
                <i class="fas fa-suitcase"></i>
                View Packages
            </a>
        </div>
    </div>
</section>

<% block('scripts') %>
<script>
    // Video fallback handler
    const heroVideo = document.querySelector('video');
    const heroFallback = document.getElementById('heroFallback');
    
    if (heroVideo && heroFallback) {
        heroVideo.addEventListener('error', function() {
            heroFallback.style.display = 'block';
        });
        
        // Also check if video can load within 3 seconds
        setTimeout(() => {
            if (heroVideo.readyState < 2) {
                heroFallback.style.display = 'block';
            }
        }, 3000);
    }

    // Get DOM elements
    const searchInput = document.getElementById('searchInput');
    const regionFilter = document.getElementById('regionFilter');
    const destinationCards = document.querySelectorAll('.destination-card');

    // Search and filter state
    let searchTerm = "";
    let selectedRegion = "";
    
    // Get region from URL query parameter
    const urlParams = new URLSearchParams(window.location.search);
    const regionParam = urlParams.get('region');
    if (regionParam) {
        regionFilter.value = regionParam;
        selectedRegion = regionParam.toLowerCase();
        applyFilters();
    }

    // Search input handler
    searchInput.addEventListener("input", (e) => {
        searchTerm = e.target.value.toLowerCase();
        applyFilters();
    });

    // Region filter handler
    regionFilter.addEventListener("change", (e) => {
        selectedRegion = e.target.value.toLowerCase();
        applyFilters();
    });

    // Apply filters to destination cards
    function applyFilters() {
        let visibleCount = 0;
        destinationCards.forEach(card => {
            const name = card.dataset.name;
            const region = card.dataset.region;

            const matchesSearch = name.includes(searchTerm);
            const matchesRegion = selectedRegion === "" || region === selectedRegion;

            if (matchesSearch && matchesRegion) {
                card.style.display = "block";
                visibleCount++;
            } else {
                card.style.display = "none";
            }
        });

        // Show "no results" message if needed
        const grid = document.getElementById('destinationsGrid');
        let noResultsMsg = document.getElementById('noResultsMessage');
        
        if (visibleCount === 0) {
            if (!noResultsMsg) {
                noResultsMsg = document.createElement('div');
                noResultsMsg.id = 'noResultsMessage';
                noResultsMsg.className = 'col-span-full text-center py-12';
                noResultsMsg.innerHTML = `
                    <div class="text-6xl mb-4">üîç</div>
                    <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-2">No Destinations Found</h3>
                    <p class="text-gray-600 dark:text-gray-400">Try adjusting your search terms or filters</p>
                `;
                grid.appendChild(noResultsMsg);
            }
        } else if (noResultsMsg) {
            noResultsMsg.remove();
        }
    }

    // Initialize AOS animations
    if (window.AOS) {
        AOS.init({
            duration: 800,
            offset: 100,
            once: true
        });
    }
</script>

</body>
</html>
