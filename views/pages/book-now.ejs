<% block('scripts') %>
<script>
    const quickForm = document.getElementById('quickBookForm');
    const selectPkgBtns = document.querySelectorAll('.select-pkg-btn');

    // Pre-fill form if package is selected
    selectPkgBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const packageName = btn.dataset.package;
            // Scroll to form
            document.getElementById('quick-form').scrollIntoView({ behavior: 'smooth' });
            // Could pre-fill destination based on package if needed
        });
    });

    // Form submission
    quickForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        const formData = {
            destination: document.getElementById('bookDestination').value,
            month: document.getElementById('bookMonth').value,
            travelers: document.getElementById('bookTravelers').value,
            budget: document.getElementById('bookBudget').value,
            name: document.getElementById('bookName').value,
            phone: document.getElementById('bookPhone').value,
            intent: 'book-now',
            priority: 'high',
            createdAt: new Date().toISOString()
        };

        console.log('Book Now Form Data:', formData);
        alert('ðŸŽ‰ Thank you for booking!\n\nWe will call you within 24 hours with exclusive offers and custom itineraries.\n\nWhatsApp: ' + formData.phone);
        
        // Reset form
        quickForm.reset();
    });

    // Initialize AOS
    if (window.AOS) {
        AOS.init({
            duration: 800,
            offset: 100,
            once: true
        });
    }
</script>

