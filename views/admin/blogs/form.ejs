<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .sidebar { background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%); }
    </style>
</head>
<body class="bg-slate-900 text-gray-100">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="sidebar w-64 shadow-lg hidden md:block fixed h-screen overflow-y-auto">
            <div class="p-6 border-b border-slate-700">
                <h1 class="text-2xl font-bold text-white">
                    <i class="fas fa-leaf text-green-400 mr-2"></i>IndiaTravel
                </h1>
                <p class="text-sm text-gray-400 mt-1">Admin Panel</p>
            </div>

            <nav class="p-4 space-y-2">
                <a href="/admin/dashboard" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-chart-line w-5 mr-3 text-blue-400"></i>Dashboard
                </a>
                <a href="/admin/destinations" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-map-marker-alt w-5 mr-3 text-red-400"></i>Destinations
                </a>
                <a href="/admin/experiences" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-star w-5 mr-3 text-yellow-400"></i>Experiences
                </a>
                <a href="/admin/packages" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-box w-5 mr-3 text-purple-400"></i>Packages
                </a>
                <a href="/admin/blogs" class="flex items-center px-4 py-3 rounded-lg bg-slate-700/50 text-white font-semibold">
                    <i class="fas fa-file-alt w-5 mr-3 text-cyan-400"></i>Blogs
                </a>
                <a href="/admin/testimonials" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-comments w-5 mr-3 text-pink-400"></i>Testimonials
                </a>
                <a href="/admin/bookings" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-calendar w-5 mr-3 text-green-400"></i>Bookings
                </a>
                <a href="/admin/aiplans" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-robot w-5 mr-3 text-orange-400"></i>AI Plans
                </a>
            </nav>

            <div class="p-4 border-t border-slate-700">
                <a href="/admin/logout" class="flex items-center px-4 py-2 rounded-lg hover:bg-red-600/20 transition text-red-400 font-semibold w-full">
                    <i class="fas fa-sign-out-alt w-5 mr-3"></i>Logout
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 md:ml-64 overflow-auto">
            <!-- Top Bar -->
            <div class="bg-slate-800 border-b border-slate-700 p-4 md:p-6 flex justify-between items-center sticky top-0 z-10">
                <h2 class="text-2xl md:text-3xl font-bold"><%= title %></h2>
                <a href="/admin/logout" class="text-red-400 hover:text-red-300 transition hidden md:block">
                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                </a>
            </div>

            <!-- Content -->
            <div class="p-4 md:p-6">
                <!-- Error Message -->
                <% if (error) { %>
                    <div class="bg-red-500/20 border border-red-500/50 text-red-200 px-4 py-3 rounded-lg mb-6 flex items-center">
                        <i class="fas fa-exclamation-circle mr-3"></i>
                        <%= error %>
                    </div>
                <% } %>

                <!-- Blogs Form -->
                <div class="max-w-3xl mx-auto">
                    <div class="bg-slate-800 rounded-lg border border-slate-700 p-8">
                        <h3 class="text-2xl font-bold mb-6"><%= title %></h3>

                        <form action="<%= isEdit && blog && blog._id ? `/admin/blogs/${blog._id}` : '/admin/blogs' %>" method="POST" class="space-y-6">
                            <!-- Title -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-300 mb-2">Title *</label>
                                <input type="text" name="title" value="<%= isEdit && blog ? blog.title : '' %>" placeholder="Blog title"
                                    class="w-full px-4 py-2 rounded-lg bg-slate-700 border border-slate-600 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500" required>
                            </div>

                            <!-- Author -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-300 mb-2">Author *</label>
                                <input type="text" name="author" value="<%= isEdit && blog ? blog.author : '' %>" placeholder="Author name"
                                    class="w-full px-4 py-2 rounded-lg bg-slate-700 border border-slate-600 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500" required>
                            </div>

                            <!-- Content -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-300 mb-2">Content *</label>
                                <textarea name="content" rows="6" placeholder="Blog content"
                                    class="w-full px-4 py-2 rounded-lg bg-slate-700 border border-slate-600 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500" required><%= isEdit && blog ? blog.content : '' %></textarea>
                            </div>

                            <!-- Image -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-300 mb-2">Image URL</label>
                                <input type="url" name="image" value="<%= isEdit && blog ? blog.image : '' %>" placeholder="https://example.com/image.jpg"
                                    class="w-full px-4 py-2 rounded-lg bg-slate-700 border border-slate-600 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500">
                            </div>

                            <!-- Tags -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-300 mb-2">Tags (comma-separated)</label>
                                <input type="text" name="tags" value="<%= isEdit && blog ? blog.tags.join(', ') : '' %>" placeholder="e.g., travel, india, tips"
                                    class="w-full px-4 py-2 rounded-lg bg-slate-700 border border-slate-600 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500">
                            </div>

                            <!-- Buttons -->
                            <div class="flex gap-4 pt-4">
                                <button type="submit" class="flex-1 bg-gradient-to-r from-blue-600 to-cyan-600 text-white py-2 rounded-lg font-semibold hover:shadow-lg transition">
                                    <i class="fas fa-save mr-2"></i><%= isEdit ? 'Update' : 'Create' %>
                                </button>
                                <a href="/admin/blogs" class="flex-1 bg-slate-700 text-white py-2 rounded-lg font-semibold hover:bg-slate-600 transition text-center">
                                    <i class="fas fa-times mr-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
