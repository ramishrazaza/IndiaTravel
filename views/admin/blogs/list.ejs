<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .sidebar { background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%); }
    </style>
</head>
<body class="bg-slate-900 text-gray-100">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="sidebar w-64 shadow-lg hidden md:block fixed h-screen overflow-y-auto">
            <div class="p-6 border-b border-slate-700">
                <h1 class="text-2xl font-bold text-white">
                    <i class="fas fa-leaf text-green-400 mr-2"></i>IndiaTravel
                </h1>
                <p class="text-sm text-gray-400 mt-1">Admin Panel</p>
            </div>

            <nav class="p-4 space-y-2">
                <a href="/admin/dashboard" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-chart-line w-5 mr-3 text-blue-400"></i>Dashboard
                </a>
                <a href="/admin/destinations" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-map-marker-alt w-5 mr-3 text-red-400"></i>Destinations
                </a>
                <a href="/admin/experiences" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-star w-5 mr-3 text-yellow-400"></i>Experiences
                </a>
                <a href="/admin/packages" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-box w-5 mr-3 text-purple-400"></i>Packages
                </a>
                <a href="/admin/blogs" class="flex items-center px-4 py-3 rounded-lg bg-slate-700/50 text-white font-semibold">
                    <i class="fas fa-file-alt w-5 mr-3 text-cyan-400"></i>Blogs
                </a>
                <a href="/admin/testimonials" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-comments w-5 mr-3 text-pink-400"></i>Testimonials
                </a>
                <a href="/admin/bookings" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-calendar w-5 mr-3 text-green-400"></i>Bookings
                </a>
                <a href="/admin/aiplans" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-robot w-5 mr-3 text-orange-400"></i>AI Plans
                </a>
            </nav>

            <div class="p-4 border-t border-slate-700">
                <a href="/admin/logout" class="flex items-center px-4 py-2 rounded-lg hover:bg-red-600/20 transition text-red-400 font-semibold w-full">
                    <i class="fas fa-sign-out-alt w-5 mr-3"></i>Logout
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 md:ml-64 overflow-auto">
            <!-- Top Bar -->
            <div class="bg-slate-800 border-b border-slate-700 p-4 md:p-6 flex justify-between items-center sticky top-0 z-10">
                <h2 class="text-2xl md:text-3xl font-bold"><%= title %></h2>
                <a href="/admin/logout" class="text-red-400 hover:text-red-300 transition hidden md:block">
                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                </a>
            </div>

            <!-- Content -->
            <div class="p-4 md:p-6">
                <!-- Messages -->
                <% if (message) { %>
                    <div class="bg-green-500/20 border border-green-500/50 text-green-200 px-4 py-3 rounded-lg mb-6 flex items-center">
                        <i class="fas fa-check-circle mr-3"></i>
                        <%= message %>
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="bg-red-500/20 border border-red-500/50 text-red-200 px-4 py-3 rounded-lg mb-6 flex items-center">
                        <i class="fas fa-exclamation-circle mr-3"></i>
                        <%= error %>
                    </div>
                <% } %>

                <!-- Blogs List -->
                <div class="space-y-6">
                    <div class="flex justify-between items-center">
                        <h3 class="text-xl font-semibold text-gray-300">All Blogs</h3>
                        <a href="/admin/blogs/new" class="bg-gradient-to-r from-blue-600 to-cyan-600 text-white px-6 py-2 rounded-lg hover:shadow-lg transition">
                            <i class="fas fa-plus mr-2"></i>Add New Blog
                        </a>
                    </div>

                    <div class="bg-slate-800 rounded-lg p-4 border border-slate-700">
                        <input type="text" id="searchInput" placeholder="Search blogs..." class="w-full px-4 py-2 rounded-lg bg-slate-700 border border-slate-600 text-white placeholder-gray-400 focus:outline-none focus:border-blue-500">
                    </div>

                    <div class="bg-slate-800 rounded-lg border border-slate-700 overflow-hidden">
                        <% if (blogs && blogs.length > 0) { %>
                            <table class="w-full">
                                <thead>
                                    <tr class="border-b border-slate-700 bg-slate-700/50">
                                        <th class="px-6 py-4 text-left text-sm font-semibold">Title</th>
                                        <th class="px-6 py-4 text-left text-sm font-semibold">Author</th>
                                        <th class="px-6 py-4 text-left text-sm font-semibold">Date</th>
                                        <th class="px-6 py-4 text-center text-sm font-semibold">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% blogs.forEach(blog => { %>
                                        <tr class="border-b border-slate-700 hover:bg-slate-700/20 transition">
                                            <td class="px-6 py-4 font-semibold"><%= blog.title %></td>
                                            <td class="px-6 py-4"><%= blog.author %></td>
                                            <td class="px-6 py-4"><%= new Date(blog.date).toLocaleDateString() %></td>
                                            <td class="px-6 py-4 text-center space-x-2">
                                                <a href="/admin/blogs/<%= blog._id %>/edit" class="text-blue-400 hover:text-blue-300"><i class="fas fa-edit"></i></a>
                                                <form action="/admin/blogs/<%= blog._id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure?')">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button type="submit" class="text-red-400 hover:text-red-300"><i class="fas fa-trash"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <div class="text-center py-12">
                                <i class="fas fa-inbox text-4xl text-gray-600 mb-4"></i>
                                <p class="text-gray-400">No blogs found</p>
                                <a href="/admin/blogs/new" class="text-blue-400 hover:text-blue-300 mt-4 inline-block">
                                    Create the first one <i class="fas fa-arrow-right ml-1"></i>
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('searchInput')?.addEventListener('keyup', function(e) {
            const searchValue = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach(row => {
                row.style.display = row.textContent.toLowerCase().includes(searchValue) ? '' : 'none';
            });
        });
    </script>
</body>
</html>
