<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .sidebar { background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%); }
    </style>
</head>
<body class="bg-slate-900 text-gray-100">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="sidebar w-64 shadow-lg hidden md:block fixed h-screen overflow-y-auto">
            <div class="p-6 border-b border-slate-700">
                <h1 class="text-2xl font-bold text-white">
                    <i class="fas fa-leaf text-green-400 mr-2"></i>IndiaTravel
                </h1>
                <p class="text-sm text-gray-400 mt-1">Admin Panel</p>
            </div>

            <nav class="p-4 space-y-2">
                <a href="/admin/dashboard" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-chart-line w-5 mr-3 text-blue-400"></i>Dashboard
                </a>
                <a href="/admin/destinations" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-map-marker-alt w-5 mr-3 text-red-400"></i>Destinations
                </a>
                <a href="/admin/experiences" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-star w-5 mr-3 text-yellow-400"></i>Experiences
                </a>
                <a href="/admin/packages" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-box w-5 mr-3 text-purple-400"></i>Packages
                </a>
                <a href="/admin/blogs" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-file-alt w-5 mr-3 text-cyan-400"></i>Blogs
                </a>
                <a href="/admin/testimonials" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-comments w-5 mr-3 text-pink-400"></i>Testimonials
                </a>
                <a href="/admin/bookings" class="flex items-center px-4 py-3 rounded-lg hover:bg-slate-700 transition">
                    <i class="fas fa-calendar w-5 mr-3 text-green-400"></i>Bookings
                </a>
                <a href="/admin/aiplans" class="flex items-center px-4 py-3 rounded-lg bg-slate-700/50 text-white font-semibold">
                    <i class="fas fa-robot w-5 mr-3 text-orange-400"></i>AI Plans
                </a>
            </nav>

            <div class="p-4 border-t border-slate-700">
                <a href="/admin/logout" class="flex items-center px-4 py-2 rounded-lg hover:bg-red-600/20 transition text-red-400 font-semibold w-full">
                    <i class="fas fa-sign-out-alt w-5 mr-3"></i>Logout
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 md:ml-64 overflow-auto">
            <!-- Top Bar -->
            <div class="bg-slate-800 border-b border-slate-700 p-4 md:p-6 flex justify-between items-center sticky top-0 z-10">
                <h2 class="text-2xl md:text-3xl font-bold"><%= title %></h2>
                <a href="/admin/logout" class="text-red-400 hover:text-red-300 transition hidden md:block">
                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                </a>
            </div>

            <!-- Content -->
            <div class="p-4 md:p-6">
                <!-- Messages -->
                <% if (message) { %>
                    <div class="bg-green-500/20 border border-green-500/50 text-green-200 px-4 py-3 rounded-lg mb-6 flex items-center">
                        <i class="fas fa-check-circle mr-3"></i>
                        <%= message %>
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="bg-red-500/20 border border-red-500/50 text-red-200 px-4 py-3 rounded-lg mb-6 flex items-center">
                        <i class="fas fa-exclamation-circle mr-3"></i>
                        <%= error %>
                    </div>
                <% } %>

                <!-- AI Plan Detail View -->
                <div class="max-w-4xl mx-auto space-y-6">
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-2xl font-bold">AI Trip Plan Details</h3>
                        <div class="flex gap-2">
                            <form action="/admin/aiplans/<%= aiPlan._id %>" method="POST" style="display: inline;" onsubmit="return confirm('Delete this plan?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="text-red-400 hover:text-red-300"><i class="fas fa-trash mr-2"></i>Delete</button>
                            </form>
                            <a href="/admin/aiplans" class="text-gray-400 hover:text-gray-300"><i class="fas fa-arrow-left mr-2"></i>Back</a>
                        </div>
                    </div>

                    <!-- Header Info -->
                    <div class="bg-slate-800 rounded-lg border border-slate-700 p-8">
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                            <div>
                                <label class="text-sm text-gray-400">User Name</label>
                                <p class="text-xl font-bold"><%= aiPlan.userName %></p>
                            </div>
                            <div>
                                <label class="text-sm text-gray-400">Destination</label>
                                <p class="text-xl font-bold"><%= aiPlan.destination %></p>
                            </div>
                            <div>
                                <label class="text-sm text-gray-400">Duration</label>
                                <p class="text-xl font-bold"><%= aiPlan.days %> days</p>
                            </div>
                            <div>
                                <label class="text-sm text-gray-400">Budget</label>
                                <p class="text-xl font-bold">â‚¹<%= aiPlan.budget ? aiPlan.budget.toLocaleString('en-IN') : 'N/A' %></p>
                            </div>
                        </div>

                        <!-- Additional Info -->
                        <div class="mt-8 pt-8 border-t border-slate-700 grid grid-cols-2 gap-6">
                            <div>
                                <label class="text-sm text-gray-400">Accommodation</label>
                                <p class="text-lg font-semibold"><%= aiPlan.accommodation || 'N/A' %></p>
                            </div>
                            <div>
                                <label class="text-sm text-gray-400">Transport</label>
                                <p class="text-lg font-semibold"><%= aiPlan.transport || 'N/A' %></p>
                            </div>
                        </div>

                        <!-- Created Date -->
                        <div class="mt-8 pt-8 border-t border-slate-700">
                            <label class="text-sm text-gray-400">Created</label>
                            <p class="text-lg"><%= new Date(aiPlan.createdAt).toLocaleString() %></p>
                        </div>
                    </div>

                    <!-- Itinerary -->
                    <% if (aiPlan.itinerary && aiPlan.itinerary.length > 0) { %>
                        <div class="bg-slate-800 rounded-lg border border-slate-700 p-8">
                            <h4 class="text-xl font-bold mb-6">Itinerary</h4>
                            <div class="space-y-4">
                                <% aiPlan.itinerary.forEach((day, idx) => { %>
                                    <div class="bg-slate-700/50 rounded-lg p-4 border border-slate-600">
                                        <p class="font-bold text-cyan-400 mb-2">Day <%= idx + 1 %></p>
                                        <p class="text-gray-300"><%= day %></p>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% } %>

                    <!-- AI Response -->
                    <% if (aiPlan.aiResponse) { %>
                        <div class="bg-slate-800 rounded-lg border border-slate-700 p-8">
                            <h4 class="text-xl font-bold mb-6">AI Generated Plan</h4>
                            <div class="text-gray-300 whitespace-pre-wrap">
                                <%= aiPlan.aiResponse %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
